
@{
    ViewBag.Title = "Create Adjustment Voucher Step 2";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>@ViewBag.Title | Logic University Stationary Store Inventory System </title>
    <!-- Favicon-->
    <link rel="icon" href="../../favicon.ico" type="image/x-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="../../plugins/bootstrap/css/bootstrap.css" rel="stylesheet">
    <!-- Waves Effect Css -->
    <link href="../../plugins/node-waves/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="../../plugins/animate-css/animate.css" rel="stylesheet" />
    <!-- Colorpicker Css -->
    <link href="../../plugins/bootstrap-colorpicker/css/bootstrap-colorpicker.css" rel="stylesheet" />
    <!-- Dropzone Css -->
    <link href="../../plugins/dropzone/dropzone.css" rel="stylesheet">
    <!-- Multi Select Css -->
    <link href="../../plugins/multi-select/css/multi-select.css" rel="stylesheet">
    <!-- Bootstrap Spinner Css -->
    <link href="../../plugins/jquery-spinner/css/bootstrap-spinner.css" rel="stylesheet">
    <!-- Bootstrap Tagsinput Css -->
    <link href="../../plugins/bootstrap-tagsinput/bootstrap-tagsinput.css" rel="stylesheet">
    <!-- Bootstrap Select Css -->
    <link href="../../plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
    <!-- noUISlider Css -->
    <link href="../../plugins/nouislider/nouislider.min.css" rel="stylesheet" />
    <!-- Custom Css -->
    <link href="../../css/style.css" rel="stylesheet">
    <!-- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes -->
    <link href="../../css/themes/all-themes.css" rel="stylesheet" />

</head>
<body class="theme-blue">
    @Html.Partial("_NavBar")
    <section class="content">
        <div class="container-fluid">            
            <form action="/Adjustment/CreateAdjustmentList/" onsubmit="return validateForm()" method="post">
                <div class="block-header">

                    <h3>
                        Create New Inventory Adjustmstent
                    </h3>
                    <h2>
                        Step 2: Edit details of items you selected
                    </h2>
                </div>


                <!-- Striped Rows -->
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card">
                            <div class="body">

                                <h4>
                                    Date Issued:@DateTime.Now.ToShortDateString()
                                    <input type="hidden" name="date" value="@DateTime.Now.ToShortDateString()" />
                                </h4><br />
                                <h4>
                                    @*Created By:Claire*@
                                    Created By: @ViewBag.user.EmployeeName
                                    <input type="hidden" name="createpeople" value="@ViewBag.user.EmployeeName" />
                                </h4>
                                <table class="table">
                                    <thead>

                                        <tr>
                                            <th>Number</th>
                                            <th>Item Code</th>
                                            <th>Description</th>
                                            <th>Plus/Minus</th>
                                            <th>Quantity Adjusted</th>
                                            <th>Reason</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < ViewBag.CatalogueList.Count; i++)
                                        {

                                            <tr>

                                                <th scope="row">@(i + 1)</th>
                                                <td>@ViewBag.CatalogueList[i].ItemCode</td>

                                                <td>@ViewBag.CatalogueList[i].Description</td>
                                                <td>
                                                    <select class="form-control show-tick addorminus" name="addorminus">
                                                        <option value="">-- Please select --</option>
                                                        <option value="+">+</option>
                                                        <option value="_">_</option>
                                                    </select>
                                                </td>
                                                <td>
                                                    <div class="input-group spinner" data-trigger="spinner">
                                                        <div class="form-line">
                                                            <input type="text" name="quantity" class="form-control text-center" value="1" data-rule="quantity">
                                                        </div>
                                                        <span class="input-group-addon">
                                                            <a href="javascript:;" class="spin-up" data-spin="up"><i class="glyphicon glyphicon-chevron-up"></i></a>
                                                            <a href="javascript:;" class="spin-down" data-spin="down"><i class="glyphicon glyphicon-chevron-down"></i></a>
                                                        </span>
                                                    </div>
                                                </td>

                                                <td>
                                                    <div class="form-line">
                                                        <input type="text" name="reason" class="form-control reason" value="" />
                                                        <input type="hidden" name="id" value="@ViewBag.CatalogueList[i].ItemCode" />
                                                    </div>
                                                </td>

                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- #END# Striped Rows -->
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button type="submit" class="btn btn-primary waves-effect">Submit</button>
                </div>
            </form>
        </div>
    </section>
    <!-- Jquery Core Js -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap Core Js -->
    <script src="../../plugins/bootstrap/js/bootstrap.js"></script>
    <!-- Select Plugin Js -->
    <script src="../../plugins/bootstrap-select/js/bootstrap-select.js"></script>
    <!-- Slimscroll Plugin Js -->
    <script src="../../plugins/jquery-slimscroll/jquery.slimscroll.js"></script>
    <!-- Bootstrap Colorpicker Js -->
    <script src="../../plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.js"></script>
    <!-- Dropzone Plugin Js -->
    <script src="../../plugins/dropzone/dropzone.js"></script>
    <!-- Input Mask Plugin Js -->
    <script src="../../plugins/jquery-inputmask/jquery.inputmask.bundle.js"></script>
    <!-- Multi Select Plugin Js -->
    <script src="../../plugins/multi-select/js/jquery.multi-select.js"></script>
    <!-- Jquery Spinner Plugin Js -->
    <script src="../../plugins/jquery-spinner/js/jquery.spinner.js"></script>
    <!-- Bootstrap Tags Input Plugin Js -->
    <script src="../../plugins/bootstrap-tagsinput/bootstrap-tagsinput.js"></script>
    <!-- noUISlider Plugin Js -->
    <script src="../../plugins/nouislider/nouislider.js"></script>
    <!-- Waves Effect Plugin Js -->
    <script src="../../plugins/node-waves/waves.js"></script>
    <!-- Custom Js -->
    <script src="../../js/admin.js"></script>
    <script src="../../js/pages/forms/advanced-form-elements.js"></script>
    <!-- Demo Js -->
    <script src="../../js/demo.js"></script>
    <script type="text/javascript">
        function validateForm() {
            //var x = document.forms["myForm"]["addorminus"].value;
            //var z = document.forms["myForm"]["reason"].value;

            for (var i = 0; i <@ViewBag.CatalogueList.Count; i++) {

                var y = document.getElementsByClassName("reason")[i].value;
                if (y == null || y == "") {
                    alert("reason can't be null");
                    return false;
                }
                var x=document.getElementsByClassName("addorminus")[i].value;
                if (x=="") {
                    alert("Plus/Minus can't be null");
                    return false;
                }
            }
        }
    </script>

</body>
</html>
