<body class="theme-blue">
    @Html.Partial("_NavBar")
    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h3>
                    Create Adjustment Voucher
                </h3>
                <h2>
                    Step 1: Choose items you want to adjust
                </h2>
            </div>
            <!-- Basic Examples -->

            <div class="row clearfix">
                <form action="/Adjustment/CreateNewAdjustment/" method="post">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card">
                            <div class="body">
                                <div class="table-responsive">

                                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                        <thead>
                                            <tr>
                                                <th>Select Items</th>
                                                <th>Item Code</th>
                                                <th>Category</th>
                                                <th>Description</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.cataloguelist)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="checkbox" name="selecteditems" value="@item.ItemCode" id="basic_checkbox_2 @item.ItemCode" class="filled-in">
                                                        <label for="basic_checkbox_2 @item.ItemCode"></label>
                                                    </td>
                                                    <td>@item.ItemCode</td>
                                                    <td>@item.Category.CategoryName</td>
                                                    <td>@item.Description</td>
                                                </tr>
                                            }
                                        </tbody>


                                    </table>


                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <center>  <button type="submit" class="btn btn-primary waves-effect">Add Items</button></center>

                    </div>
                </form>
            </div>
            <!-- #END# Basic Examples -->
            <br>


        </div>
    </section>
